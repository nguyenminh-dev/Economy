<nav class="navbar navbar-expand-lg shadow">
    <div class="container align-items-center justify-content-center">
        <div class="nav-container">

            <ul class="nav-list">
                <li class="nav-item">
                    <a class="nav-link" href="/product">TẤT CẢ SẢN PHẨM</a>
