<div class="content-body">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Tạo biến thể</h4>
					</div>
					<div class="card-body">
						<div class="form-validation">
							<form class="form-valide" method="POST"
								action="/adminProduct/createProduct/save/{{p._id}}/saveSkus">
								<div class="row">
									<div class="col-xl-12">
										<div class="form-group row">
											<label class="col-lg-2 col-form-label" for="val-username">SKU
												<span class="text-danger">*</span>
											</label>

											<div class="col-lg-10">
												<input type="text" class="form-control" id="" name="sku" placeholder="VCELH01"
													required>
											</div>
										</div>

										<div class="form-group row">
											<label class="col-lg-2 col-form-label" for="val-email">Hình ảnh<span
													class="text-danger">*</span>
											</label>
											<div class="col-lg-10">
												<input type="text" class="form-control" id="" name="img" placeholder="https://..."
													required>
											</div>
										</div>

										<div class="form-group row">
											<label class="col-lg-2 col-form-label" for="val-password">Màu sắc
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-4">
												<input type="text" class="form-control" id="val-password" name="color_name"
													placeholder="Rose Gold" required>
											</div>

											<label class="col-lg-2 col-form-label" for="val-password">Mã màu
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-4">
												<input type="text" class="as_colorpicker form-control" placeholder="#7ab2fa"
													name="color_id" required>
											</div>

										</div>
										<div id="size-container" class="form-group">
											<div class="size-field row">
												<label class="col-lg-2 col-form-label" for="val-confirm-password">Size
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-4">
													<input type="text" class="form-control" id="val-confirm-password" name="sizes"
														placeholder="S">
												</div>
												<label class="col-lg-2 col-form-label" for="val-password">Số lượng
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-3">
													<input type="text" class="as_colorpicker form-control" placeholder="0,1,2,..."
														name="qty">
												</div>

												<div class="add-btn" title="Thêm size">
													<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
														<path
															d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm144 276c0 6.6-5.4 12-12 12h-92v92c0 6.6-5.4 12-12 12h-56c-6.6 0-12-5.4-12-12v-92h-92c-6.6 0-12-5.4-12-12v-56c0-6.6 5.4-12 12-12h92v-92c0-6.6 5.4-12 12-12h56c6.6 0 12 5.4 12 12v92h92c6.6 0 12 5.4 12 12v56z" />
													</svg>
												</div>
											</div>


										</div>

										<div class="form-group row justify-content-end">
											<div class="col-2 text-right">
												<button type="submit" class="btn btn-primary">Lưu sản phẩm</button>
											</div>
										</div>
									</div>
								</div>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
	integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
	crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
	//ADD SIZE
	$(document).ready(function () {
		var maxField = 10;
		var addBtn = $('.add-btn');
		var wrapper = $('#size-container');
		var fieldHTML = `
		<div class="size-field row">
			<label class="col-lg-2 col-form-label" for="val-confirm-password">Size
				<span class="text-danger">*</span>
			</label>
			<div class="col-lg-4">
				<input type="text" class="form-control" id="val-confirm-password" name="sizes"
					placeholder="S">
			</div>
			<label class="col-lg-2 col-form-label" for="val-password">Số lượng
				<span class="text-danger">*</span>
			</label>
			<div class="col-lg-3">
				<input type="text" class="as_colorpicker form-control" placeholder="0,1,2,..."
					name="qty">
			</div>

			<div class="remove-btn" title="Xoá size">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
					<!-- Font Awesome Pro 5.15.4 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) -->
					<path
						d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zM124 296c-6.6 0-12-5.4-12-12v-56c0-6.6 5.4-12 12-12h264c6.6 0 12 5.4 12 12v56c0 6.6-5.4 12-12 12H124z" />
				</svg>
			</div>
		</div>
		`
		var i = 1;
		$(addBtn).click(function () {
			if (i < maxField) {
				i++;
				$(wrapper).append(fieldHTML);
			}
		})

		//Once click remove-btn
		$(wrapper).on('click', '.remove-btn', function (e) {
			e.preventDefault;
			$(this).parent('.size-field').remove();
		})
	});	
</script>