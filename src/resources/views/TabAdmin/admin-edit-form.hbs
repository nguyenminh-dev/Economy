<div class="content-body">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<form method="POST" action="/adminProduct/{{product._id}}?_method=PUT">
					<div class="card">
						<div class="card-header">
							<h4 class="card-title">Chỉnh sửa sản phẩm <strong>{{product.name}}</strong></h4>
							<div class="col-2 text-right">
								<button type="submit" class="btn btn-primary">Lưu chỉnh sửa</button>
							</div>
						</div>

						<div class="card-body">
							<div class="form-validation">
								{{!-- <form class="form-valide" novalidate="novalidate" method="POST"
									action="/adminCreateList/productForm"> --}}
									<div class="row">
										<div class="col-xl-12">
											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-username">Tên dòng sản
													phẩm
													<span class="text-danger">*</span>
												</label>

												<div class="col-lg-10">
													<input type="text" class="form-control" id="" name="name" required
														value="{{product.name}}">
												</div>
											</div>

											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-email">Loại<span
														class="text-danger">*</span>
												</label>
												<div class="col-lg-10">
													<input type="text" class="form-control" id="" name="category" required
														value="{{product.category}}">
												</div>
											</div>

											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-password">Giới tính
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-10">
													<input type="text" class="form-control" id="val-password" required name="gender"
														value="{{product.gender}}">
												</div>
											</div>
											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-confirm-password">Giá
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-10">
													<input type="text" class="form-control" id="val-confirm-password" required
														name="price" value="{{product.price}}">
												</div>
											</div>

											<div class="form-group row justify-content-end">

											</div>
										</div>
									</div>
									{{!--
								</form> --}}
							</div>
						</div>
						<div class="card-header">
							<h4 class="card-title">Chỉnh sửa skus</h4>
						</div>
						{{#each product.skus}}
						<div class="card-body">
							<div class="form-validation">
								<div class="row">
									<div class="col-xl-12">
										<div class="form-group row">
											<label class="col-lg-2 col-form-label" for="val-username">SKU
												<span class="text-danger">*</span>
											</label>

											<div class="col-lg-10">
												<input type="text" class="form-control" id="" name="sku" value="{{this.sku}}">
											</div>
										</div>

										<div class="form-group row">
											<label class="col-lg-2 col-form-label" for="val-email">Hình ảnh<span
													class="text-danger">*</span>
											</label>
											<div class="col-lg-10 d-flex align-items-center">
												<div class="product-img">
													<img src="{{this.img}}" alt="hinh_sanpham">
												</div>
												<input type="text" class="form-control" id="" name="img" value="{{this.img}}">
											</div>
										</div>

										<div class="form-group row">
											<label class="col-lg-2 col-form-label" for="val-password">Màu sắc
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-4">
												<input type="text" class="form-control" id="val-password" name="color_name"
													value="{{this.color.title}}">
											</div>

											<label class="col-lg-2 col-form-label" for="val-password">Mã màu
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-4">
												<input type="text" class="as_colorpicker form-control"
													value="{{this.color.color_code}}" name="color_id">
											</div>

										</div>
										{{#each this.sizes}}
										<div class="form-group row">
											<label class="col-lg-2 col-form-label" for="val-confirm-password">Size
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-4">
												<input type="text" class="form-control" id="val-confirm-password" name="sizes"
													value="{{this.size}}">
											</div>
											<label class="col-lg-2 col-form-label" for="val-password">Số lượng
												<span class="text-danger">*</span>
											</label>
											<div class="col-lg-4">
												<input type="text" class="as_colorpicker form-control" value="{{this.qty}}"
													name="qty">
											</div>
										</div>
										{{/each}}
										<div class="form-group row justify-content-end">
											<div class="col-2 text-right">
												<a href="/adminProduct/{{../product._id}}/{{this.sku}}/editSku" class="btn btn-primary">Chỉnh sửa sku</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
						{{/each}}
					</div>
				</form>
			</div>
		</div>
	</div>
</div>