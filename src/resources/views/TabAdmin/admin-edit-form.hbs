<div class="content-body">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Chỉnh sửa sản phẩm <strong>{{product.name}}</strong></h4>
					</div>
					<form method="POST" action="/adminProduct/{{product._id}}?_method=PUT">
						<div class="card-body">
							<div class="form-validation">
								{{!-- <form class="form-valide" novalidate="novalidate" method="POST"
									action="/adminCreateList/productForm"> --}}
									<div class="row">
										<div class="col-xl-12">
											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-username">Tên dòng sản
													phẩm
													<span class="text-danger">*</span>
												</label>

												<div class="col-lg-10">
													<input type="text" class="form-control" id="" name="name" required
														value="{{product.name}}">
												</div>
											</div>

											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-email">Loại<span
														class="text-danger">*</span>
												</label>
												<div class="col-lg-10">
													<input type="text" class="form-control" id="" name="category"
														required value="{{product.category}}">
												</div>
											</div>

											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-password">Giới tính
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-10">
													<input type="text" class="form-control" id="val-password" required
														name="gender" value="{{product.gender}}">
												</div>
											</div>
											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-confirm-password">Giá
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-10">
													<input type="text" class="form-control" id="val-confirm-password"
														required name="price" value="{{product.price}}">
												</div>
											</div>

											<div class="form-group row justify-content-end">
												{{!-- <div class="col-2 text-right">
													<button type="submit" class="btn btn-primary">Tiếp tục</button>
												</div> --}}
											</div>
										</div>
									</div>
									{{!--
								</form> --}}
							</div>
						</div>
						<div class="card-header">
							<h4 class="card-title">Chỉnh sửa skus</h4>
						</div>
						{{!-- Nếu được sửa phần này để nó tự lặp --}}
						<div class="card-body">
							<div class="form-validation">
								{{!-- <form class="form-valide" action="#" method="POST"
									action="/adminCreateList/productForm/skusForm"> --}}
									<div class="row">
										<div class="col-xl-12">
											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-username">SKU
													<span class="text-danger">*</span>
												</label>

												<div class="col-lg-10">
													<input type="text" class="form-control" id="" name="sku"
														value="{{product.skus.0.sku}}">
												</div>
											</div>

											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-email">Hình ảnh<span
														class="text-danger">*</span>
												</label>
												<div class="col-lg-10">
													<img src="{{product.skus.0.img}}" alt="hinh_sanpham">
													<input type="text" class="form-control" id="" name="img"
														value="{{product.skus.0.img}}">
												</div>
											</div>

											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-password">Màu sắc
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-4">
													<input type="text" class="form-control" id="val-password"
														name="color_name" value="{{product.skus.0.color.title}}">
												</div>

												<label class="col-lg-2 col-form-label" for="val-password">Mã màu
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-4">
													<input type="text" class="as_colorpicker form-control"
														value="{{product.skus.0.color.color_code}}" name="color_id">
												</div>

											</div>
											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-confirm-password">Size
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-4">
													<input type="text" class="form-control" id="val-confirm-password"
														name="sizes" value="{{product.skus.0.sizes.0.size}}">
												</div>
												<label class="col-lg-2 col-form-label" for="val-password">Số lượng
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-4">
													<input type="text" class="as_colorpicker form-control"
														value="{{product.skus.0.sizes.0.qty}}" name="qty">
												</div>
											</div>
											<div class="form-group row justify-content-end">
												<div class="col-2 text-right">
													{{!-- <button type="button" class="btn btn-primary"
														data-toggle="modal" data-target="#saveProduct">Lưu sản
														phẩm</button> --}}
													<button type="submit" class="btn btn-primary">Lưu sản phẩm</button>
												</div>
											</div>
										</div>
									</div>
									{{!--
								</form> --}}
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>