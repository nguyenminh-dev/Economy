<div class="content-body">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<div class="card">
					<div class="card-header">
						<h4 class="card-title">Tạo dòng sản phẩm</h4>
					</div>
					<form method="POST" action="/adminProduct/createProduct/save">
						<div class="card-body">
							<div class="form-validation">
								<div class="row">
									<div class="col-xl-12">
										<div class="form-group row">
											<label class="col-lg-2 col-form-label" for="val-username">Tên dòng sản
												phẩm
												<span class="text-danger">*</span>
											</label>

											<div class="col-lg-10">
												<input type="text" class="form-control" id="" name="name" required
													placeholder="CLASSIC RING">
											</div>
										</div>

										<div class="form-group row">
											<label class="col-lg-2 col-form-label" for="val-email">Loại<span
													class="text-danger">*</span>
											</label>
											<div class="col-lg-10">
												<input type="text" class="form-control" id="" name="category" required
