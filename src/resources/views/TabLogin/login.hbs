<!-- Modal -->
<div class="container py-5">
   <!--  Title-->
   <div class="row justify-content-center text-center">
      <h3 class="text-center">ĐĂNG NHẬP</h3>
      <div class="col-12 col-lg-6">

         {{#if message}}
         <div style="text-align: center" class="alert alert-{{message.type}}">
            <strong>{{message.intro}}</strong> {{message.message}}
         </div>
         {{/if}}

         <form class="form mt-4" method="POST" action="/login/loginStore">
            <div class="form-group">
               <input class="form-control mb-3" type="email" placeholder="Email" name="email" required />
               <input class="form-control" type="password" placeholder="Mật khẩu" name="password" required />
            </div>

            <button type="submit" class="col-12 btn btn-success mt-3">Đăng nhập</button>
            <a class="forgot-pass-link mt-2" href="/forgotPass">Quên mật khẩu?</a>

         </form>
         <div class="second-section w3_section" style="padding-bottom: 10px">
            <div class="bottom-header w3_bottom">
               <h5 class="mt-3">HOẶC</h5>
            </div>
            <div class="">
               <ul class="customer-function-list d-flex justify-content-center">
                  <!-- facebook -->
                  <li>
                     <a class="function-link facebook px-5" href="/loginFb" target="blank">
                        <i class="fab fa-facebook"></i>
                        facebook</a>
                  </li>

                  <li>
                     <a class="function-link google px-5" href="#" target="blank">
                        <i class="fab fa-google"></i>
                        google</a>
                  </li>
               </ul>
            </div>
         </div>
         <p>Chưa có tài khoản?<a class="signup-link" href="/register">Đăng ký ngay</a></p>

      </div>
   </div>

</div>