												</label>
												<div class="col-lg-10">
													<input type="date" class="form-control" id="val-confirm-password"
														required name="ngayapdung" value="{{promotion.ngayapdung}}">
												</div>
											</div>

											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-confirm-password">Ngày
													hết hạn
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-10">
													<input type="date" class="form-control" id="val-confirm-password"
														required name="ngayhethan" value="{{promotion.ngayhethan}}">
												</div>
											</div>

											<div class="form-group row">
												<label class="col-lg-2 col-form-label" for="val-confirm-password">Mô tả
													khuyến mãi
													<span class="text-danger">*</span>
												</label>
												<div class="col-lg-10">
													<input type="text" class="form-control" id="val-confirm-password"
														required name="motakm"
														value="{{promotion.motakm}}">
												</div>
											</div>

											<div class="form-group row justify-content-end">
												<div class="col-2 text-right">
													<button type="submit" class="btn btn-primary">Lưu khuyến
														mãi</button>
												</div>
											</div>
										</div>
									</div>
